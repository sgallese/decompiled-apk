<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/blue_500"
                android:endColor="@color/red_500"
                android:angle="0"
                android:centerColor="@color/brand_400"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorWindowBackground"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
    <item android:right="3dp">
        <bitmap
            android:gravity="right"
            android:src="@drawable/adventure_guide_right"
            android:tileMode="disabled"/>
    </item>
</layer-list>
