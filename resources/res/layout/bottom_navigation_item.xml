<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/icon_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:scaleType="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/textColorPrimaryDark"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_view"
        android:layout_centerHorizontal="true"
        android:fontFamily="@string/font_family_regular"
        android:paddingStart="@dimen/spacing_small"
        android:paddingEnd="@dimen/spacing_small"
        android:letterSpacing="0.05"/>
    <com.habitrpg.android.habitica.ui.views.DayNightTextView
        android:textSize="12sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/selected_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_view"
        android:layout_centerHorizontal="true"
        android:fontFamily="@string/font_family_medium"
        android:paddingStart="@dimen/spacing_small"
        android:paddingEnd="@dimen/spacing_small"
        android:letterSpacing="0.05"
        app:dayTextColor="@color/white"
        app:nightTextColor="?attr/colorPrimaryDistinct"/>
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/badge"
        android:background="@drawable/badge_circle"
        android:padding="3dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-10dp"
        android:layout_alignEnd="@+id/icon_view"
        style="@style/Overline"/>
</merge>
